{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    ".yalc",
    ".idea"
  ]
}
